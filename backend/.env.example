# Environment Variables for Smart Quizzer AI Backend
# Copy this file to .env and add your actual values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Google Gemini AI API Key
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Flask Secret Key (generate a secure random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secure-secret-key-change-in-production

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Database URL (defaults to SQLite)
DATABASE_URL=sqlite:///smart_quizzer.db

# CORS Origins (comma-separated list of allowed frontend URLs)
# For production, replace with your actual frontend domain
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development/Production Mode
FLASK_ENV=development
DEBUG=True

# ===========================================
# EMAIL CONFIGURATION (Optional - for password reset)
# ===========================================

# SMTP Configuration (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Smart Quizzer
FRONTEND_URL=http://localhost:3000